<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgCancel_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cancel"
            />

    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
        <EditText
            android:id="@+id/MaMacHang_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="22dp"
            android:hint="Loại giày"
            />
    <EditText
        android:id="@+id/TenSp_edit"
        android:inputType="textPersonName"
        android:hint="Tên giày"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22dp"/>
    <EditText
        android:id="@+id/MaSP_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="Mã giày"
        android:textSize="22dp"/>
    <EditText
        android:id="@+id/GiaSP_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="Giá giày"
        android:textSize="22dp"/>
        <EditText
            android:id="@+id/SoLuongSP_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:hint="Số lượng"
            android:textSize="22dp"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update" />
